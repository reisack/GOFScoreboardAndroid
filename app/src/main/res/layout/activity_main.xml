<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="#D2D2D2">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre de joueurs"
            android:fontFamily="sans-serif-medium"
            android:textSize="38sp"
            android:height="50dp"
            android:width="400dp"
            android:textAlignment="center" android:id="@+id/labelNbPlayers"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toTopOf="@+id/radioGroupNbPlayers"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"/>
    <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:checkedButton="@id/radioButton4players"
            android:id="@+id/radioGroupNbPlayers"
            app:layout_constraintTop_toBottomOf="@+id/labelNbPlayers"
            app:layout_constraintBottom_toTopOf="@+id/labelPlayerOneName" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="96dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="96dp">
        <RadioButton
                android:text="3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/radioButton3players"
                android:layout_weight="1"
                android:textSize="48sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:fontFamily="sans-serif-medium"
                android:onClick="onNbPlayersChanged"/>
        <RadioButton
                android:text="4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/radioButton4players"
                android:layout_weight="1"
                android:textSize="48sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:fontFamily="sans-serif-medium"
                android:layout_marginStart="60dp"
                android:onClick="onNbPlayersChanged"/>
    </RadioGroup>

    <TextView
            android:text="Joueur 1"
            android:textSize="24sp"
            android:layout_width="130dp"
            android:layout_height="46dp"
            android:id="@+id/labelPlayerOneName"
            android:fontFamily="sans-serif-medium"
            app:layout_constraintTop_toBottomOf="@+id/radioGroupNbPlayers"
            app:layout_constraintBottom_toTopOf="@+id/labelPlayerTwoName"
            app:layout_constraintEnd_toStartOf="@+id/editPlayerOneName" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="24dp"/>

    <EditText
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:inputType="textPersonName"
            android:text=""
            android:textSize="24sp"
            android:ems="10"
            android:id="@+id/editPlayerOneName"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/labelPlayerOneName"
            app:layout_constraintStart_toEndOf="@+id/labelPlayerOneName" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"/>

    <TextView
            android:text="Joueur 2"
            android:textSize="24sp"
            android:layout_width="130dp"
            android:layout_height="46dp"
            android:id="@+id/labelPlayerTwoName"
            android:fontFamily="sans-serif-medium"
            app:layout_constraintTop_toBottomOf="@+id/labelPlayerOneName"
            app:layout_constraintBottom_toTopOf="@+id/labelPlayerThreeName"
            app:layout_constraintEnd_toStartOf="@+id/editPlayerTwoName" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="24dp"/>

    <EditText
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:inputType="textPersonName"
            android:text=""
            android:textSize="24sp"
            android:ems="10"
            android:id="@+id/editPlayerTwoName"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/labelPlayerTwoName"
            app:layout_constraintStart_toEndOf="@+id/labelPlayerTwoName" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"/>

    <TextView
            android:text="Joueur 3"
            android:textSize="24sp"
            android:layout_width="130dp"
            android:layout_height="46dp"
            android:id="@+id/labelPlayerThreeName"
            android:fontFamily="sans-serif-medium"
            app:layout_constraintTop_toBottomOf="@+id/labelPlayerTwoName"
            app:layout_constraintBottom_toTopOf="@+id/labelPlayerFourName"
            app:layout_constraintEnd_toStartOf="@+id/editPlayerThreeName" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="24dp"/>

    <EditText
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:inputType="textPersonName"
            android:text=""
            android:textSize="24sp"
            android:ems="10"
            android:id="@+id/editPlayerThreeName"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/labelPlayerThreeName"
            app:layout_constraintStart_toEndOf="@+id/labelPlayerThreeName" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"/>

    <TextView
            android:text="Joueur 4"
            android:textSize="24sp"
            android:layout_width="130dp"
            android:layout_height="46dp"
            android:id="@+id/labelPlayerFourName"
            android:fontFamily="sans-serif-medium"
            app:layout_constraintTop_toBottomOf="@+id/labelPlayerThreeName"
            app:layout_constraintBottom_toTopOf="@+id/buttonStartGame"
            app:layout_constraintEnd_toStartOf="@+id/editPlayerFourName" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="24dp"/>

    <EditText
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:inputType="textPersonName"
            android:text=""
            android:textSize="24sp"
            android:ems="10"
            android:id="@+id/editPlayerFourName"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/labelPlayerFourName"
            app:layout_constraintStart_toEndOf="@+id/labelPlayerFourName" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"/>

    <Button
            android:text="Commencer la partie"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:onClick="onStartGame"
            android:id="@+id/buttonStartGame"
            android:textSize="22sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/labelPlayerFourName" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="56dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="55dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>