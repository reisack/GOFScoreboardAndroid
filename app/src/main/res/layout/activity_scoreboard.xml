<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View" />
        <variable name="scoreboardViewModel"
                  type="rek.gofscoreboard.ScoreboardViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ScoreboardActivity"
            android:background="#D2D2D2">

        <TextView
                android:text="@string/enter_scores_explanation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:id="@+id/labelNewScoreText"
                android:fontFamily="sans-serif-medium"
                android:textAlignment="center"
                app:layout_constraintBottom_toTopOf="@+id/labelPlayerOneScore"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
                app:layout_constraintTop_toTopOf="parent"/>

        <TextView
                android:text="@{scoreboardViewModel.getPlayerBindingByIndex(0).name}"
                android:textSize="16sp"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:id="@+id/labelPlayerOneScore"
                android:labelFor="@id/editPlayerOneScore"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/editPlayerOneScore"
                app:layout_constraintTop_toBottomOf="@+id/labelNewScoreText"
                app:layout_constraintBottom_toTopOf="@+id/labelPlayerThreeScore" android:layout_marginStart="24dp"
                android:layout_marginEnd="8dp"/>

        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="2"
                android:textSize="16sp"
                android:contentDescription="@string/nb_cards_left_p1_description"
                android:importantForAutofill="no"
                android:text="@={scoreboardViewModel.getPlayerBindingByIndex(0).nbCardsLeft}"
                android:id="@+id/editPlayerOneScore"
                app:layout_constraintStart_toEndOf="@+id/labelPlayerOneScore" app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toStartOf="@+id/labelPlayerTwoScore"
                app:layout_constraintBottom_toBottomOf="@+id/labelPlayerOneScore"/>

        <TextView
                android:text="@{scoreboardViewModel.getPlayerBindingByIndex(1).name}"
                android:textSize="16sp"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:id="@+id/labelPlayerTwoScore"
                android:labelFor="@id/editPlayerTwoScore"
                app:layout_constraintStart_toEndOf="@+id/editPlayerOneScore" app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toStartOf="@+id/editPlayerTwoScore"
                app:layout_constraintBottom_toBottomOf="@+id/editPlayerOneScore" android:layout_marginStart="24dp"
                android:layout_marginEnd="8dp"/>

        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="2"
                android:textSize="16sp"
                android:text="@={scoreboardViewModel.getPlayerBindingByIndex(1).nbCardsLeft}"
                android:contentDescription="@string/nb_cards_left_p2_description"
                android:importantForAutofill="no"
                android:id="@+id/editPlayerTwoScore"
                app:layout_constraintStart_toEndOf="@+id/labelPlayerTwoScore" app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@+id/labelPlayerTwoScore" android:layout_marginEnd="24dp"/>

        <TextView
                android:text="@{scoreboardViewModel.getPlayerBindingByIndex(2).name}"
                android:textSize="16sp"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:id="@+id/labelPlayerThreeScore"
                android:labelFor="@id/editPlayerThreeScore"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toStartOf="@+id/editPlayerThreeScore"
                app:layout_constraintTop_toBottomOf="@+id/labelPlayerOneScore"
                app:layout_constraintBottom_toTopOf="@+id/btnAddScore" android:layout_marginStart="24dp"
                android:layout_marginEnd="8dp"/>

        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="2"
                android:textSize="16sp"
                android:text="@={scoreboardViewModel.getPlayerBindingByIndex(2).nbCardsLeft}"
                android:id="@+id/editPlayerThreeScore"
                android:contentDescription="@string/nb_cards_left_p3_description"
                android:importantForAutofill="no"
                app:layout_constraintStart_toEndOf="@+id/labelPlayerThreeScore"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toStartOf="@+id/labelPlayerFourScore"
                app:layout_constraintBottom_toBottomOf="@+id/labelPlayerThreeScore"/>

        <TextView
                android:text="@{scoreboardViewModel.getPlayerBindingByIndex(3).name}"
                android:textSize="16sp"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:id="@+id/labelPlayerFourScore"
                android:labelFor="@id/editPlayerFourScore"
                app:layout_constraintStart_toEndOf="@+id/editPlayerThreeScore"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toStartOf="@+id/editPlayerFourScore"
                app:layout_constraintBottom_toBottomOf="@+id/editPlayerThreeScore" android:layout_marginStart="24dp"
                android:layout_marginEnd="8dp"/>

        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="2"
                android:textSize="16sp"
                android:text="@={scoreboardViewModel.getPlayerBindingByIndex(3).nbCardsLeft}"
                android:id="@+id/editPlayerFourScore"
                android:contentDescription="@string/nb_cards_left_p4_description"
                android:importantForAutofill="no"
                app:layout_constraintStart_toEndOf="@+id/labelPlayerFourScore"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@+id/labelPlayerFourScore" android:layout_marginEnd="24dp"/>

        <Button
                android:text="@string/button_valid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnAddScore"
                android:onClick="onAddScore"
                app:layout_constraintTop_toBottomOf="@+id/labelPlayerThreeScore"
                app:layout_constraintBottom_toTopOf="@+id/scoreboardHeader" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toStartOf="@+id/btnDeletePreviousScore" android:layout_marginEnd="16dp"
                android:layout_marginStart="32dp"/>

        <Button
                android:text="@string/button_delete_previous_scores_turn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:id="@+id/btnDeletePreviousScore"
                android:onClick="onRemovePreviousScore"
                app:layout_constraintBottom_toBottomOf="@+id/btnAddScore"
                app:layout_constraintStart_toEndOf="@+id/btnAddScore" app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="16dp"
                android:layout_marginEnd="32dp"/>

        <androidx.recyclerview.widget.RecyclerView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:scrollbars="none"
                android:id="@+id/scoreboardHeader"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                app:layout_constraintBottom_toTopOf="@+id/scoreboard"
                app:layout_constraintTop_toBottomOf="@+id/btnAddScore" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp"/>

        <androidx.recyclerview.widget.RecyclerView
                android:layout_width="0dp"
                android:layout_height="310dp"
                android:scrollbars="vertical"
                android:id="@+id/scoreboard"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp"
                app:layout_constraintTop_toBottomOf="@+id/scoreboardHeader"
                app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>